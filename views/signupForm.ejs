<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/signupFormStyles.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="cont">
      <h1 class="head">Sign up</h1>
      <form action="/signup" method="POST" class="signupForm">
        <label class="label" for="fullname">Fullname</label>
        <input
          class="input"
          type="text"
          pattern="[a-zA-Z0-9]+"
          title="Only letters and numbers are allowed"
          name="fullname"
          id="fullname"
          required
        />
        <p class="errMsg" id="fullnameErrMsg"></p>

        <label class="label" for="username">Username</label>
        <input
          class="input"
          type="text"
          name="username"
          id="username"
          required
        />
        <p class="errMsg" id="usernameErrMsg"></p>

        <label class="label" for="password">Password</label>
        <div class="input passCont">
          <input
            class="passInput"
            type="password"
            name="password"
            id="passwordInput"
            required
          />
          <i class="fa-regular fa-eye eyeIcon" id="eyeIcon"></i>
        </div>
        <p class="errMsg" id="passwordErrMsg"></p>

        <label class="label" for="confirmPassword">Confirm password</label>
        <div class="input passCont">
          <input
            class="passInput"
            type="password"
            name="confirmpassword"
            id="confirmpasswordInput"
            required
          />
          <i class="fa-regular fa-eye eyeIcon2" id="eyeIcon2"></i>
        </div>
        <p class="errMsg" id="confirmpasswordErrMsg"></p>

        <% if (typeof errorMsg !== 'undefined' && errorMsg) { %>
        <p class="serverErrorMsg" id="serverErrorMsg"><%= errorMsg %></p>
        <% } %>

        <button type="submit" class="signupBtn">Sign Up</button>

        <p class="loginText">
          Already have an account?<a href="/login"> Log In</a>
        </p>
      </form>
    </div>

    <script src="/js/signupForm.js"></script>
  </body>
</html>
